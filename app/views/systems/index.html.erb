<div class="container">
<p id="notice"><%= notice %></p>

<h1>Payment methods worldwide</h1>

<div class="btn">
  <%= link_to '+ method', new_system_path  %>
</div>

<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Name</th>
      <th>Payment type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= system.payment_type %></td>
        <td><%= system.description %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>