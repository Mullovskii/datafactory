<%= simple_form_for(@inflow) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :exporter_country_id %>
    <%= f.input :importer_country_id %>
    <%= f.input :annual_turnover %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
