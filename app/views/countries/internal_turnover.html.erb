<div class="container">
<p id="notice"><%= notice %></p>

<%= link_to 'Back to country list', countries_path %>

<br>
<br>

<h3><%= @country.name %></h3>

<ul class="mininav">
  <li class="mininav_link" > 
      <%= link_to "Popular websites", country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Buys from", buys_from_country_path(@country), :class=>"nav-link"  %>
  </li>


  <li class="mininav_link" > 
      <%= link_to "Internal market", internal_turnover_country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Payment systems", root_path, :class=>"nav-link"  %>
  </li>

</ul>

<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Sales region</th>
      <th>Importer region</th>
      <th>E-commerce volume</th>
      <th>Internet audience</th>
      <th>E-shoppers</th>
      <th>Game market</th>
   <!--    <th>Description</th>
      <th>Contacts</th>
      <th>Monthly visits</th>
      <th>Country rank</th> -->
<!--       <th>Valid</th>
 -->    <!--   <th>Status</th>
      <th>Bounce rate</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <%- if @country.sales_region == true %>
          <td> Yes </td>
        <%- else%>
          <td> No </td>
        <% end %>
         <%- if @country.importer_region == true %>
          <td> Yes </td>
        <%- else%>
          <td> No </td>
        <% end %>
        
        <td>$<%= @country.market_volume %></td>
        <td><%= @country.users %></td>
        <td><%= @country.shoppers %></td>
        <td>$<%= @country.game_market %></td>

        <td><%= link_to 'Edit', edit_country_path(@country) %></td>
      </tr>
  </tbody>
</table>

<br>


<h5><%= "Where" + " " + @country.name + " " + "buys from"%></h5>

<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Country</th>
      <th>URL</th>
      <th>Monthly country visits</th>
      <th>Turnover</th>
      <th>Category</th>
      <th>Status</th>
   <!--    <th>Description</th>
      <th>Contacts</th>
      <th>Monthly visits</th>
      <th>Country rank</th> -->
<!--       <th>Valid</th>
 -->    <!--   <th>Status</th>
      <th>Bounce rate</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traffics.each do |traffic| %>
      <tr>
        <td><b><%= traffic.website.country.name %></b></td>
        <td><b><%= link_to traffic.website.url, traffic.website %></b></td>
        <%- if traffic.website.monthly_visits %>
          <%- @country_visits = (traffic.website.monthly_visits/1000*(traffic.country_share/100)).round %>
          <td><%= @country_visits %>K</td>
        <%- else %>
          <td></td>
        <%- end %>

        <%- if @country_visits && traffic.website.setup %>
          <td>$<%= @country_visits*traffic.website.setup.average_bill*(traffic.website.setup.conversion/100)  %>K</td>
        <%- else %>
          <td></td>
        <%- end %>

        <td><b><%= traffic.website.category %></b></td>
        <td><b><%= traffic.website.status %></b></td>

      <td><%= @info %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить сайт', new_website_path %>


</div>










