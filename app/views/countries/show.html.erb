<div class="container">
<p id="notice"><%= notice %></p>

<%= link_to 'Back to country list', countries_path %>

<br>
<br>

<div class="colored_heading">
<h1><%= @country.name %></h1>
</div>

<br>
<ul class="mininav">
  <li class="mininav_link" > 
      <%= link_to "Top websites", country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Top importers", foreign_buyers_country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Buys from", buys_from_country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Internal market", internal_turnover_country_path(@country), :class=>"nav-link"  %>
  </li>

  <li class="mininav_link" > 
      <%= link_to "Payment systems", payment_systems_country_path(@country), :class=>"nav-link"  %>
  </li>

</ul>

<br>
<br>
<br>
<br>


<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>E-commerce volume</th>
      <th>Internet audience</th>
      <th>E-shoppers</th>
      <th>Game market</th>
      <th>Sales region</th>
      <th>Importer country</th>
   <!--    <th>Description</th>
      <th>Contacts</th>
      <th>Monthly visits</th>
      <th>Country rank</th> -->
<!--       <th>Valid</th>
 -->    <!--   <th>Status</th>
      <th>Bounce rate</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <%- if @country.market_volume %>
          <td><%= @country.market_volume/1000000000 %>bn</td>
        <%- else %>
          <td></td>
        <%- end %>


        <%- if @country.users %>
          <td><%= @country.users/1000000 %>mln</td>
        <%- else %>
          <td></td>
        <%- end %>


        <%- if @country.shoppers %>
          <td><%= @country.shoppers/1000000 %>mln</td>
        <%- else %>
          <td></td>
        <%- end %>


        <%- if @country.game_market %>
          <td><%= @country.game_market/1000000 %>mln</td>
        <%- else %>
          <td></td>
        <%- end %>

        <%- if @country.sales_region == true %>
          <td> <%= image_tag('/images/success.svg', :class => "success") %> </td>
        <%- else%>
          <td> No </td>
        <% end %>

         <%- if @country.importer_region == true %>
          <td> <%= image_tag('/images/success.svg', :class => "success") %> </td>
        <%- else%>
          <td> No </td>
        <% end %>

        <td> 
        <%= link_to edit_country_path(@country) do %>
          <%= image_tag '/images/pencil.svg', :class => "success" %>
        <% end %>
        </td>
      </tr>
  </tbody>
</table>

<br>

<div class="show_more_block">
  <a class="more" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    More info
  </a>
</div>

<div class="collapse" id="collapseExample">
  <div class="card card-block">
    <%= @country.description %>
  </div>
</div>


<h5><%= "Top e-commerce websites in" + " " + @country.name + " " + "(#{Website.where(country_id: @country.id).length})" %></h5>

<div class="btn">
  <%= link_to '+ website', new_website_path  %>
</div>

<table class="table table-nonfluid footer">
  <thead>
    <tr>
      <th>URL</th>
      <th>Monthly visits</th>
      <th>Category</th>
      <th>Valid</th>
      <th>Status</th>
   <!--    <th>Description</th>
      <th>Contacts</th>
      <th>Monthly visits</th>
      <th>Country rank</th> -->
<!--       <th>Valid</th>
 -->    <!--   <th>Status</th>
      <th>Bounce rate</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>

        <td><b><%= link_to website.url, website %></b></td>
        <%- if website.monthly_visits %>
          <td><%= website.monthly_visits/1000 %>K</td>
        <%- else %>
          <td></td>
        <%- end %>
        <td><b><%= website.category %></b></td>
        <%- if website.valid_for_yandex == true %>
          <td> <%= image_tag('/images/success.svg', :class => "success") %> </td>
        <%- else%>
          <td> No </td>
        <% end %>
        <td><b><%= website.status %></b></td>

<!--         <td><%= website.company %></td>
 -->        <!-- <td><%= website.category %></td> -->
      <td><%= @info %></td>
       <!--  <td><%= website.description %></td>
        <td><%= website.contacts %></td>
        <td><%= website.monthly_visits %></td>
        <td><%= website.country_rank %></td>
        <td><%= website.valid_for_yandex %></td>
        <td><%= website.status %></td>
        <td><%= website.bounce_rate %></td> -->
<!--         <td><%= link_to 'Показать', website %></td>
 -->        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>










