<div class="container">

<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table class="table table-nonfluid">
  <thead>
    <tr>
      <th>Country</th>
      <th>E-commerce volume</th>
      <th>Internet audience</th>
      <th>e-shoppers</th>
      <th>Game market</th>
      <th>Sales region</th>
      <th>Importer country</th>
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td ><%= link_to country.name, country %></td>
        <%- if country.market_volume %>
          <td>$<%= country.market_volume/1000000000 %>bn</td>
        <%- else%>
          <td> </td>
        <% end %>

        <%- if country.users %>
          <td><%= country.users/1000000 %>mln</td>
        <%- else%>
          <td> </td>
        <% end %>

        <%- if country.shoppers %>
          <td><%= country.shoppers/1000000 %>mln</td>
        <%- else%>
          <td> </td>
        <% end %>

        <%- if country.game_market %>
          <td><%= country.game_market/1000000 %>mln</td>
        <%- else%>
          <td> </td>
        <% end %>


        <%- if country.sales_region == true %>
          <td> Yes </td>
        <%- else%>
          <td> No </td>
        <% end %>
         <%- if country.importer_region == true %>
          <td> Yes </td>
        <%- else%>
          <td> No </td>
        <% end %>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
<!--         <td><%= link_to 'Удалить', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 -->      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить страну', new_country_path %>
</div>

