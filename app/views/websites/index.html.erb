<p id="notice"><%= notice %></p>

<h1>Websites</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Url</th>
      <th>Company</th>
      <th>Category</th>
      <th>Description</th>
      <th>Contacts</th>
      <th>Monthly visits</th>
      <th>Country rank</th>
      <th>Valid</th>
      <th>Status</th>
      <th>Bounce rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.country %></td>
        <td><%= website.url %></td>
        <td><%= website.company %></td>
        <td><%= website.category %></td>
        <td><%= website.description %></td>
        <td><%= website.contacts %></td>
        <td><%= website.monthly_visits %></td>
        <td><%= website.country_rank %></td>
        <td><%= website.valid %></td>
        <td><%= website.status %></td>
        <td><%= website.bounce_rate %></td>
        <td><%= link_to 'Show', website %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Website', new_website_path %>
